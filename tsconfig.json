{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "ts/**/*"
  ]
}
